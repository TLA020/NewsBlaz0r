@page "/articles"
@using NewsBlaz0r.Shared.Models
@using NewsBlaz0r.Client.Constants
@inject HttpClient Http

<h1>Articles</h1>
<p>This fetches articles from our external API</p>

@if (articles == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container-fluid">
        @foreach (var article in articles)
        {
            <div class="card w-100 mb-2">
                <div class="card-body">
                    <h5 class="card-title font-weight-bolder">@article.Title</h5>
                    <p class="card-text">@article.DescriptionTrimmed</p>
                    <a href="#" class="btn btn-primary float-right">Read More</a>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Article> articles;
    
    protected override async Task OnInitializedAsync()
    {
        articles = await Http.GetFromJsonAsync<List<Article>>($"articles?endpoint={Endpoints.AdNews}");
    }
}